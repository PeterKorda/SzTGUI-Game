<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="PainWindow" Height="720" Width="1280" LostFocus="Window_Pause" LostKeyboardFocus="Window_Pause" GotFocus="Window_Resume" KeyDown="Window_KeyDown" MouseDown="Window_Pause" KeyUp="Window_KeyUp" Background="Black" Foreground="Lime" Cursor="Cross">

	<Canvas x:Name="Main_Canvas">
		<Grid x:Name="Grid_UI" Height="704" Width="1280">
			<Label x:Name="LB_Timer" Content="{Binding Path=Time}" Canvas.Left="0" Canvas.Top="0" Background="#00000000" Foreground="#FF00FA00" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,20,30,20" FontFamily="Cascadia Mono Light"/>
			<Label x:Name="LB_Score" Content="{Binding Path=Score, Mode=OneWay}" Canvas.Left="1163" Canvas.Top="10" Background="#00000000" Foreground="#FF00FA00" FontSize="36" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Cascadia Mono Light" Margin="30,20,30,20"/>
		</Grid>
	</Canvas>
</Window>
